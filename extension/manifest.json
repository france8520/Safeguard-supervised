{
  "manifest_version": 2,
  "name": "Safeguard",
  "version": "1.0",
  "description": "Filters profanity from web pages",
  "permissions": [
    "activeTab",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "web_accessible_resources": [
    "data/profane-words.txt"
  ],
  "browser_action": {
    "default_popup": "popup/popup.html"
  }
}
